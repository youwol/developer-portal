{
    "name": "@youwol/developer-portal",
    "version": "0.0.1-next",
    "description": "Front-end of the developer-portal of YouWol",
    "main": "dist/index.html",
    "scripts": {
        "build": "yarn build:dev",
        "build:dev": "del-cli dist && webpack --mode development",
        "build:prod": "del-cli dist && webpack --mode production",
        "test": "jest -c ./jest.config.js --rootDir . -i",
        "test-coverage": "jest -c ./jest.config.js --rootDir . -i --collect-coverage --collectCoverageFrom=./src/app/**/*.ts ",
        "doc": "typedoc src/ --exclude src/index.ts --exclude src/tests --out dist/docs --theme default",
        "upgrade-youwol": "yarn upgrade @youwol/flux-view @youwol/fv-button @youwol/fv-group @youwol/fv-input @youwol/fv-tabs @youwol/fv-tree @youwol/flux-youwol-essentials",
        "start": "webpack serve"
    },
    "author": "",
    "license": "",
    "dependencies": {
        "@youwol/cdn-client": "^0.0.10",
        "@youwol/flux-core": "^0.0.23",
        "@youwol/flux-files": "^0.0.5",
        "@youwol/flux-view": "^0.0.11",
        "@youwol/fv-button": "^0.0.4",
        "@youwol/fv-group": "^0.0.6",
        "@youwol/fv-input": "^0.0.5",
        "@youwol/fv-tabs": "^0.0.3",
        "@youwol/fv-tree": "^0.0.4",
        "@youwol/fv-widgets": "^0.0.5",
        "@youwol/logging": "^0.0.2",
        "@youwol/platform-essentials": "^0.0.3",
        "@youwol/http-clients": "^0.0.1",
        "d3": "5.15.0",
        "d3-dag": "^0.8.2",
        "lodash": "4.17.21",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.5"
    },
    "devDependencies": {
        "js-beautify": "^1.14.0",
        "@types/jest": "26.0.22",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "@types/node": "14.14.37",
        "css-loader": "5.2.0",
        "del-cli": "3.0.1",
        "eslint": "7.23.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^25.2.2",
        "eslint-plugin-unused-imports": "^1.1.5",
        "eslint-webpack-plugin": "2.5.3",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "5.2.0",
        "jest": "27.4.5",
        "jest-junit": "13.0.0",
        "mini-css-extract-plugin": "1.3.9",
        "prettier": "^2.4.1",
        "prettier-plugin-properties": "^0.1.0",
        "source-map-loader": "2.0.1",
        "ts-jest": "27.1.2",
        "ts-lib": "0.0.5",
        "ts-loader": "8.1.0",
        "typedoc": "0.20.34",
        "typescript": "4.2.3",
        "webpack": "5.65.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.7.3"
    },
    "youwol": {
        "type": "application",
        "pipeline": {
            "name": "yw_pipeline_webpack_ts",
            "version": "0.0.0"
        },
        "cdnDependencies": {
            "@youwol/flux-view": "^0.0.11",
            "@youwol/http-clients": "^0.0.1",
            "@youwol/platform-essentials": "^0.0.3",
            "@youwol/flux-files": "^0.0.5",
            "@youwol/fv-button": "^0.0.4",
            "@youwol/fv-group": "^0.0.6",
            "@youwol/fv-input": "^0.0.5",
            "@youwol/fv-tabs": "^0.0.3",
            "@youwol/fv-tree": "^0.0.4",
            "lodash": "4.x",
            "reflect-metadata": "0.x",
            "rxjs": "6.x"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "rangeStart": 0,
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "endOfLine": "lf",
        "embeddedLanguageFormatting": "auto",
        "keySeparator": "="
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "/dist/",
            "/coverage/"
        ],
        "env": {
            "browser": true,
            "es2020": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:eslint-comments/recommended",
            "plugin:import/recommended",
            "prettier"
        ],
        "rules": {
            "eslint-comments/require-description": [
                "error"
            ],
            "eslint-comments/no-unused-disable": [
                "error"
            ],
            "curly": [
                "error"
            ],
            "no-irregular-whitespace": [
                "error",
                {
                    "skipComments": true,
                    "skipTemplates": true
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "webpack.config.js",
                    "jest.config.js"
                ],
                "env": {
                    "node": true
                }
            },
            {
                "files": [
                    "*.ts"
                ],
                "extends": [
                    "plugin:@typescript-eslint/recommended",
                    "plugin:import/typescript"
                ],
                "parser": "@typescript-eslint/parser",
                "parserOptions": {
                    "tsconfigRootDir": "./",
                    "project": [
                        "./tsconfig.json"
                    ]
                },
                "plugins": [
                    "unused-imports",
                    "@typescript-eslint"
                ],
                "rules": {
                    "@typescript-eslint/no-namespace": "off",
                    "@typescript-eslint/no-unused-vars": "off",
                    "unused-imports/no-unused-imports": "error",
                    "unused-imports/no-unused-vars": [
                        "warn",
                        {
                            "vars": "all",
                            "varsIgnorePattern": "^_",
                            "args": "after-used",
                            "argsIgnorePattern": "^_"
                        }
                    ],
                    "@typescript-eslint/no-unnecessary-type-assertion": "error"
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "extends": [
                    "plugin:jest/recommended",
                    "plugin:jest/style"
                ],
                "plugins": [
                    "jest"
                ],
                "rules": {
                    "jest/expect-expect": [
                        "error",
                        {
                            "assertFunctionNames": [
                                "expect",
                                "verify"
                            ]
                        }
                    ]
                }
            }
        ],
        "noInlineConfig": false,
        "reportUnusedDisableDirectives": true
    }
}
